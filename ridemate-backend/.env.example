# RideMate Backend Environment Variables
# Copy this file to .env and fill in your values

# Resend API Key for OTP emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Session secret (use a strong random string in production)
SESSION_SECRET=change-this-to-a-strong-random-secret

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Ola Maps API Key (get from https://cloud.olakrutrim.com)
OLA_MAPS_API_KEY=your_ola_maps_api_key_here

# Optional: Ola OAuth credentials if your flows require token exchange
OLA_CLIENT_ID=your_ola_client_id_here
OLA_CLIENT_SECRET=your_ola_client_secret_here
